{
  "private": true,
  "license": "MIT",
  "scripts": {
    "build": "lerna exec --scope soya-next* --ignore soya-next-server -- babel src -d lib --ignore __tests__",
    "clean": "rimraf examples/*/.next packages/*/lib",
    "clean-all": "yarn run clean && lerna clean",
    "coverage": "yarn test -- --coverage",
    "coveralls": "yarn run coverage && cat ./coverage/lcov.info | coveralls",
    "lint": "marlint",
    "postinstall": "lerna bootstrap",
    "precommit": "lint-staged",
    "prepublish": "yarn run clean && yarn run build",
    "publish": "lerna publish",
    "test": "yarn run lint && jest",
    "watch": "yarn run build -- -w"
  },
  "devDependencies": {
    "@zeit/next-css": "^0.1.5",
    "@zeit/next-source-maps": "^0.0.2",
    "babel-cli": "^6.26.0",
    "babel-jest": "^22.4.3",
    "babel-plugin-transform-es2015-modules-commonjs": "^6.26.0",
    "babel-preset-stage-2": "^6.24.1",
    "config": "^1.30.0",
    "coveralls": "^3.0.0",
    "enzyme": "^3.3.0",
    "enzyme-adapter-react-16": "^1.1.1",
    "enzyme-to-json": "^3.3.3",
    "express": "^4.16.3",
    "husky": "^0.14.3",
    "jest": "^22.4.3",
    "lerna": "^2.9.0",
    "lint-staged": "^7.0.0",
    "marlint": "^6.5.4",
    "next": "^6.0.2",
    "prettier": "^1.11.1",
    "react": "^16.2.0",
    "react-apollo": "^2.1.1",
    "react-cookie": "^2.1.4",
    "react-dom": "^16.2.0",
    "react-redux": "^5.0.7",
    "react-test-renderer": "^16.2.0",
    "redux": "^3.7.2",
    "rimraf": "^2.6.2"
  },
  "lint-staged": {
    "*.js": [
      "prettier",
      "git add"
    ]
  },
  "marlint": {
    "ignores": [
      "**/.idea/**",
      "**/.next/**",
      "**/examples/**",
      "**/lib/**"
    ],
    "rules": {
      "react/react-in-jsx-scope": "off"
    }
  },
  "jest": {
    "setupFiles": [
      "./test/setup.js"
    ],
    "snapshotSerializers": [
      "enzyme-to-json/serializer"
    ],
    "testPathIgnorePatterns": [
      "/examples/"
    ],
    "testMatch": [
      "**/__tests__/**/*.js?(x)",
      "**/?(*).(spec|test).js?(x)"
    ]
  }
}
